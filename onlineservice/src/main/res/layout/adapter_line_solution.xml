<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/bg_gray_shape"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvWalkDistance_als"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp" />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:background="#8CDDFF"
	    
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/tvDirection_als"
	        android:padding="5dp"
	        />
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/tvPassStopCount_als"
	        android:padding="5dp"
	        />
	    
	</LinearLayout>
    <TextView
        android:id="@+id/tvTrafficTool_als"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00A2E8"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tvStartName_als"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8CDDFF"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tvEndName_als"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8CDDFF"
        android:padding="5dp" />

</LinearLayout>