<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView 
        android:id="@+id/img_top1"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_btn_top"
        android:layout_marginLeft="@dimen/popup_top_icon_margin_left1"
        android:visibility="gone"
        />
    <ImageView 
        android:id="@+id/img_top2"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_btn_top"
        android:layout_marginLeft="@dimen/popup_top_icon_margin_left2"
        android:visibility="gone"
        />
    <GridView
        android:id="@+id/gridview"
        android:layout_width="@dimen/gridview_w"
        android:layout_height="@dimen/gridview_h"
        android:background="#000"
        android:columnWidth="50dp"
        android:gravity="center"
        android:horizontalSpacing="3dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dp" />

</LinearLayout>


