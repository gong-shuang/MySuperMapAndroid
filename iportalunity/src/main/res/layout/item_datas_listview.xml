<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_margin="6dp"
                                        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                <ImageView android:id="@+id/image_thumbnail"
                           android:layout_marginTop="5dp"
                           android:layout_marginLeft="5dp"
                           android:scaleType="centerCrop"
                           android:layout_width="120dp"
                           android:layout_height="80dp"/>

                <ImageButton android:id="@+id/more"
                             android:background="@drawable/image_button_more"
                             android:layout_alignParentRight="true"
                             android:layout_margin="10dp"
                             android:layout_width="35dp"
                             android:layout_height="35dp"
                             android:visibility="invisible"/>

            </RelativeLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="名称："
                        android:layout_marginLeft="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_filename"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:maxLines="2"
                        android:textIsSelectable="true"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="大小："
                        android:layout_marginLeft="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_size"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="标签："
                        android:layout_marginLeft="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_tags"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="所有者："
                        android:layout_marginLeft="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_owner"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="更新时间："
                        android:layout_marginLeft="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_lastmodfied_time"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="下载次数："
                        android:layout_marginLeft="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_downloadCount"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="下载："
                        android:layout_marginLeft="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                <Button
                        android:id="@+id/btn_download"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_nor_down"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:textColor="@color/download_button"
                        android:layout_height="35dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
