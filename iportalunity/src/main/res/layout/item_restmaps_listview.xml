<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_margin="6dp"
                                        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                <ImageView android:id="@+id/entireImage"
                           android:layout_marginTop="5dp"
                           android:layout_marginLeft="5dp"
                           android:scaleType="centerCrop"
                           android:layout_width="150dp"
                           android:layout_height="100dp"/>

                <ImageButton android:id="@+id/delete"
                             android:background="@drawable/image_button_delete"
                             android:layout_alignParentRight="true"
                             android:layout_margin="10dp"
                             android:layout_width="35dp"
                             android:layout_height="35dp"/>

                <ImageButton android:id="@+id/more"
                             android:background="@drawable/image_button_more"
                             android:layout_toLeftOf="@id/delete"
                             android:layout_margin="10dp"
                             android:layout_width="35dp"
                             android:layout_height="35dp"/>

            </RelativeLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="名称："
                        android:layout_marginLeft="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_restname"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="资源配置："
                        android:layout_marginLeft="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_resourceConfigID"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:maxLines="2"
                        android:textIsSelectable="true"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="浏览地址："
                        android:layout_marginLeft="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_path"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:autoLink="all"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:text="资源类型："
                        android:layout_marginLeft="2dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_resourceType"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
