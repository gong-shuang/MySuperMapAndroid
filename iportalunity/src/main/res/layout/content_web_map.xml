<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_user_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserScrollingActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_margin="6dp"
                                            android:visibility="visible"
                                            android:id="@+id/cardview_password"
                                            android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    <AutoCompleteTextView
                            android:id="@+id/maptitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="地图的名称："
                            android:text=""
                            android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    <AutoCompleteTextView
                            android:id="@+id/mapdescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="地图描述信息："
                            android:text=""
                            android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    <AutoCompleteTextView
                            android:id="@+id/mapversion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="地图的版本号："
                            android:text=""
                            android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    <AutoCompleteTextView
                            android:id="@+id/maplevel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="地图的缩放级别："
                            android:text=""
                            android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    <AutoCompleteTextView
                            android:id="@+id/mapprojection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="地图的投影坐标系："
                            android:text=""
                            android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:layout_margin="6dp"
                                            android:visibility="visible"
                                            android:id="@+id/cardview_password2"
                                            android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    <AutoCompleteTextView
                            android:id="@+id/mapleftBottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="地图的范围 leftBottom："
                            android:text=""
                            android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    <AutoCompleteTextView
                            android:id="@+id/maprightTop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="地图的范围 rightTop："
                            android:text=""
                            android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    <AutoCompleteTextView
                            android:id="@+id/mapcenter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="地图中心点："
                            android:text=""
                            android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    <AutoCompleteTextView
                            android:id="@+id/baselayer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="地图的底图信息："
                            android:text=""
                            android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    <AutoCompleteTextView
                            android:id="@+id/maplayers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="地图的图层信息："
                            android:text=""
                            android:inputType="text"/>

                </android.support.design.widget.TextInputLayout>

             <!--   <TextView android:layout_width="match_parent"
                          android:layout_margin="4dp"
                          android:padding="10dp"
                          android:text="提示：密码格式为4-18位，需要包含大、小写字母、数字和特殊字符！"
                          android:layout_height="wrap_content"/>-->

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
                android:id="@+id/update"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:padding="4dp"
                android:text="提交修改"
                android:background="@drawable/btn_nor_down"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textColor="@color/download_button"
                android:layout_height="40dp"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>