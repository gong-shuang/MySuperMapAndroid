<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_itemlayer">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_visible"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_visible_current" />

        <ImageView

            android:id="@+id/image_select"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_select_current" />

        <ImageView

            android:id="@+id/image_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_edit_current" />

        <ImageView

            android:id="@+id/image_datatype"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/layer_region" />

        <TextView
            android:id="@+id/tv_dataname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:text="aaaaaaaa"
            android:maxEms="10"
        android:ellipsize="end"
        android:singleLine="true"
            android:textColor="#000" />


</LinearLayout>

        <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_more" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>
</LinearLayout>
