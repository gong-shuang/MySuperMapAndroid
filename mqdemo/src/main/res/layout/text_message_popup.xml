<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="#ffffff" >
    
    <TextView
        android:id="@+id/tv_text_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:text="文本消息" 
        android:background="#53ccc3"/>
   
   <View 
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_text_message_title"
	    android:background="@drawable/cutline_gradient"/>
   
    <EditText 
        android:id="@+id/et_text_message_content"
        android:layout_below="@+id/tv_text_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:inputType="none"
        android:imeOptions="flagNoExtractUi"
        android:minLines="5"
        android:maxLines="5"
        android:background="@drawable/spotitem_state_normal"
        android:gravity="left|top"
        />
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/et_text_message_content"
		android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

	
	    <Button
	        android:id="@+id/cancel"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="60dp"
	        android:text=" 取  消   " 
	        android:textSize="18dp"
	        android:textColor="#000000"/>
	    <Button
	        android:id="@+id/send"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="60dp"
	        android:layout_marginRight="60dp"                                                                                                                                
	        android:text=" 发  送   "
	        android:textSize="18dp"
	        android:textColor="#000000" />
	</LinearLayout>

</RelativeLayout>
