<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_roundcorner"
    >
    
<TextView
        android:id="@+id/tv_TrackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="轨迹名称:"
        android:textSize="20sp"
        android:textColor="#000000"
        />
    <EditText 
        android:id="@+id/edit_TrackName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/tv_TrackName"
        android:layout_below="@id/tv_TrackName"
        android:layout_marginTop="10dp"
        android:hint="输入文本"
        android:textSize="15sp"
        android:textColor="#000000"
        />
    
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_marginBottom="15dp"
       android:gravity="center_horizontal"
       android:orientation="horizontal" 
       >

       <Button
           android:id="@+id/btn_record_confirm"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="确定"
           android:textColor="#000000" 
           />

       <Button
           android:id="@+id/btn_record_cancel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@id/btn_record_confirm"
           android:layout_marginLeft="20dp"
           android:layout_toRightOf="@id/btn_record_confirm"
           android:text="取消"
           android:textColor="#000000"
           android:textSize="15sp" 
           />
   </RelativeLayout>

</RelativeLayout>
