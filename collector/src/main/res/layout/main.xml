<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <com.supermap.mapping.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.supermap.mapping.ScaleView
        android:id="@+id/scaleView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="80dp" />
 	
     <include
        android:layout_alignParentLeft="true" 
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:id="@+id/mebubar"
        layout="@layout/menubar"
        />

		
    <Button
		android:text="提交对象" 
        android:id="@+id/btnObject0"
		android:layout_width="60dp"
		android:layout_height="40dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" 
        android:layout_marginBottom="90dip" 
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
    	android:background="@drawable/button_menu"
    	android:textColor="#ffffff"
		android:visibility="visible"/>
    <Button
		android:text="添加对象" 
        android:id="@+id/btnObject"
		android:layout_width="60dp"
		android:layout_height="40dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" 
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnObject0"
    	android:background="@drawable/button_menu"
    	android:textColor="#ffffff"
		android:visibility="visible"/>
    <Button
		android:text="删除对象" 
        android:id="@+id/btnObject2"
		android:layout_width="60dp"
		android:layout_height="40dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" 
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnObject"
    	android:background="@drawable/button_menu"
    	android:textColor="#ffffff"
		android:visibility="visible"/>
    <Button
		android:text="选中对象" 
        android:id="@+id/btnObject2_1"
		android:layout_width="60dp"
		android:layout_height="40dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" 
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnObject2"
    	android:background="@drawable/button_menu"
    	android:textColor="#ffffff"
		android:visibility="visible"/>
    <Button
		android:text="定位" 
        android:id="@+id/btnObject3"
		android:layout_width="60dp"
		android:layout_height="40dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" 
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnObject2_1"
    	android:background="@drawable/button_menu"
    	android:textColor="#ffffff"
		android:visibility="visible"/>
    <Button
		android:text="重做"
        android:id="@+id/btnObject4"
		android:layout_width="60dp"
		android:layout_height="40dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" 
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnObject3"
    	android:background="@drawable/button_menu"
    	android:textColor="#ffffff"
		android:visibility="invisible"/>
    <Button
		android:text="回退"
        android:id="@+id/btnObject5"
		android:layout_width="60dp"
		android:layout_height="40dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" 
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnObject4"
    	android:background="@drawable/button_menu"
    	android:textColor="#ffffff"
		android:visibility="invisible"/>
		
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" 
        >

        <Button
            android:id="@+id/btnControlDisplay2"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_menu_collector"
            android:text="创建"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnControlDisplay3"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnControlDisplay2"
            android:layout_alignBottom="@+id/btnControlDisplay2"
            android:layout_marginLeft="0dp"
            android:background="@drawable/button_menu_collector"
            android:text="选择类型"
            android:textColor="#ffffff"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnControlDisplay3_1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnControlDisplay3"
            android:layout_alignBottom="@+id/btnControlDisplay3"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_menu_collector"
            android:text="定位采集"
            android:textColor="#ffffff"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnControlDisplay3_2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnControlDisplay3_1"
            android:layout_alignBottom="@+id/btnControlDisplay3_1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_menu_collector"
            android:text="编辑设置"
            android:textColor="#ffffff"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnControlDisplay4"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnControlDisplay3_2"
            android:layout_alignBottom="@+id/btnControlDisplay3_2"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_menu_collector"
            android:text="回退"
            android:textColor="#ffffff"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnControlDisplay5"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnControlDisplay4"
            android:layout_alignBottom="@+id/btnControlDisplay4"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_menu_collector"
            android:text="重做"
            android:textColor="#ffffff"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnControlDisplay6"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnControlDisplay5"
            android:layout_alignBottom="@+id/btnControlDisplay5"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_menu_collector"
            android:text="提交"
            android:textColor="#ffffff"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnControlDisplay7"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/btnControlDisplay6"
            android:layout_alignBottom="@+id/btnControlDisplay6"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_menu_collector"
            android:text="屏幕打点"
            android:textColor="#ffffff"
            android:visibility="visible" />
    </LinearLayout>
    
</RelativeLayout>