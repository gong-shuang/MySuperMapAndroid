	<RelativeLayout
	    android:id="@+id/ly_showinfo"
		android:padding="5dp"
		android:layout_below="@id/ly_Title"
		android:layout_alignParentLeft="true"
		android:background="@drawable/bg_white_bottom_round"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	    <TextView
	    	android:id="@+id/txt_geoname" 
	   		android:text="牌照："
	   		android:textSize="15sp"
	   		android:textColor="#ff000000"
	   		android:layout_alignParentLeft="true"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"  
	        android:layout_gravity="center_vertical"
	        android:singleLine="true" /> 
		<TextView 
	        android:id="@+id/txt_CarNo" 
	        android:ellipsize="marquee"  
	        android:textSize="15sp"
	        android:textColor="#ff000000"
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"  
	        android:singleLine="true" 
	        android:layout_toRightOf="@+id/txt_geoname"
	        android:layout_alignTop="@+id/txt_geoname"/> 
		<TextView
	    	android:id="@+id/txt_geocapital" 
	   		android:text="电话："
	   		android:textSize="15sp"
	   		android:textColor="#ff000000"
	   		android:layout_below="@+id/txt_geoname"
	   		android:layout_alignLeft="@+id/txt_geoname"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"  
	        android:layout_gravity="center_vertical"
	        android:singleLine="true" />
	    <TextView 
	        android:id="@+id/txt_PhoneNo" 
	        android:textColor="#ff000000"
	        android:ellipsize="marquee" 
	        android:textSize="15sp"       
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"  
	        android:singleLine="true" 
	        android:layout_toRightOf="@+id/txt_geocapital"
	        android:layout_alignTop="@+id/txt_geocapital"/> 
	    <TextView
	    	android:id="@+id/txt_geopop" 
	   		android:text="经度："
	   		android:textSize="15sp"
	   		android:textColor="#ff000000"
	   		android:layout_below="@+id/txt_geocapital"
	   		android:layout_alignLeft="@+id/txt_geocapital"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"  
	        android:layout_gravity="center_vertical"
	        android:singleLine="true" />
	    <TextView 
	        android:id="@+id/txt_x"     
	        android:ellipsize="marquee"  
	        android:textColor="#ff000000"
	        android:textSize="15sp"
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"  
	        android:singleLine="true" 
	        android:layout_toRightOf="@+id/txt_geopop"
	        android:layout_alignTop="@+id/txt_geopop"/> 
	     <TextView
	    	android:id="@+id/txt_geoContinent" 
	   		android:text="纬度："
	   		android:textSize="15sp"
	   		android:textColor="#ff000000"
	   		android:layout_below="@+id/txt_geopop"
	   		android:layout_alignLeft="@+id/txt_geopop"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"  
	        android:layout_gravity="center_vertical"
	        android:singleLine="true" />
	    <TextView 
	        android:id="@+id/txt_y"     
	        android:ellipsize="marquee"  
	        android:textColor="#ff000000"
	        android:textSize="15sp"
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content" 
	        android:layout_gravity="center_vertical"  
	        android:singleLine="true" 
	        android:layout_toRightOf="@+id/txt_geoContinent"
	        android:layout_alignTop="@+id/txt_geoContinent"/> 
	        
	    <TextView
 	        android:id="@+id/txt_track"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:layout_below="@+id/txt_geoContinent"
	        android:layout_alignLeft="@+id/txt_geoContinent"
	        android:layout_marginTop="10dp"
 	        android:gravity="center"
 	        android:text="轨迹"
 	        android:textSize="15sp"
 	        android:textColor="#222222" />
	    
	        <Switch
 	        android:id="@+id/switch_cartrack"
 	        android:layout_width="54dp"
 	        android:layout_height="22dp"
 	        android:layout_alignBottom="@id/txt_track"
 	        android:layout_alignParentRight="true"
 	        android:paddingRight="5dp"
 	        android:background="@drawable/cartrack_switch"
 	        android:textOn=""
 	        android:textOff=""
 	        android:track="@drawable/transparent"
 	        android:thumb="@drawable/transparent"
 	       
 	        />
	</RelativeLayout>
