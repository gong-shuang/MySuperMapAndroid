<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <com.supermap.mapping.MapView
        android:id="@+id/mapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <RadioGroup
        android:id="@+id/btn_open_group"
        android:layout_marginTop="20dip" 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/round_rect" 
    	android:orientation="horizontal"   
        >
        <RadioButton 
            android:id="@+id/btn_map_open"
            android:layout_width="117dp"
            android:layout_height="96dp"
            android:background="@drawable/selector_mapopen"
            android:button="@drawable/bg_rect_transparent"
            
            />
        <RadioButton 
            android:id="@+id/btn_wks_open"
            android:layout_width="117dp"
            android:layout_height="96dp"
            android:button="@drawable/bg_rect_transparent"
            android:background="@drawable/selector_wksopen"
            />
        <RadioButton 
            android:id="@+id/btn_ds_open"
            android:layout_width="117dp"
            android:layout_height="96dp"
            android:background="@drawable/selector_dspen"
            android:button="@drawable/bg_rect_transparent"
            />
        
        <RadioButton
	        android:id="@+id/btn_receivefocus"
	        android:layout_width="72dip"
	        android:layout_height="72dip"
	        android:visibility="gone" />
    </RadioGroup>

    <Button
        android:id="@+id/btnViewEntire"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" 
        android:layout_marginBottom="20dip" 
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_entire"
        />

    <Button
        android:id="@+id/btnZoomOut"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" 
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnViewEntire"
        android:background="@drawable/btn_zoom_out"
        />
    <Button
        android:id="@+id/btnZoomIn"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip" 
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/btnZoomOut"
        android:background="@drawable/btn_zoom_in"
        />

</RelativeLayout>