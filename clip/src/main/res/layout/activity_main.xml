<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clip"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/onclick"
        android:text="选择裁剪" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/onclick"
        android:text="确定"
        android:layout_below="@+id/button"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/onclick"
        android:text="查看裁剪"
        android:layout_below="@+id/button1"/>


    <com.supermap.mapping.MapView
        android:id="@+id/clipmapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.supermap.mapping.MapView>

    <RelativeLayout
        android:id="@+id/tb_select_map"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/toolbar_selector"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp" >

        <TextView
            android:id="@+id/txt_selectLayer"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="选择数据："
            android:textColor="#ff000000" />


        <Spinner
            android:id="@+id/spn_select_layer"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/txt_selectLayer" />
    </RelativeLayout>


</RelativeLayout>