<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.supermap.ar.MainActivity">

    <com.supermap.mapping.AR.ArControl2
            android:id="@+id/test_arcontrol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

    <Button
            android:id="@+id/btn_AR_Near"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ar_btn_selector"
            android:textColor="#FF1493"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:visibility="visible"
            android:text="临近模式"
            android:textSize="14sp"/>
    <Button
            android:id="@+id/btn_AR_Following"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/btn_AR_Near"
            android:background="@drawable/ar_btn_selector"
            android:textColor="#FF1493"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:visibility="visible"
            android:text="跟随模式"
            android:textSize="14sp"/>
    <Button
            android:id="@+id/btn_map_mode"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/btn_AR_Following"
            android:background="@drawable/ar_btn_selector"
            android:textColor="#FF1493"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:visibility="visible"
            android:text="普通地图"
            android:textSize="14sp"/>
    <Button
            android:id="@+id/btn_unlimitedmap_mode"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/btn_map_mode"
            android:background="@drawable/ar_btn_selector"
            android:textColor="#FF1493"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:visibility="visible"
            android:text="无限屏模式"
            android:textSize="14sp"/>
    <Button
            android:id="@+id/btn_show_carema"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ar_btn_selector"
            android:textColor="#FF1493"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:visibility="visible"
            android:text="开启摄像"
            android:textSize="14sp"/>
    <Button
            android:id="@+id/btn_hide_carema"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btn_show_carema"
            android:background="@drawable/ar_btn_selector"
            android:textColor="#FF1493"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:visibility="visible"
            android:text="关闭摄像"
            android:textSize="14sp"/>
    <Button
            android:id="@+id/btn_open_mapview"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btn_hide_carema"
            android:background="@drawable/ar_btn_selector"
            android:textColor="#FF1493"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:visibility="visible"
            android:text="开启地图"
            android:textSize="14sp"/>
    <Button
            android:id="@+id/btn_hide_mapview"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btn_open_mapview"
            android:background="@drawable/ar_btn_selector"
            android:textColor="#FF1493"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:visibility="visible"
            android:text="关闭地图"
            android:textSize="14sp"/>

    <SeekBar
            android:id="@+id/progress"
            style="@style/mprogress_horizontal"
            android:layout_below="@+id/btn_hide_mapview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            android:max="100"
            android:paddingTop="10dp"/>

</RelativeLayout>